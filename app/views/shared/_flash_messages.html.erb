<%# flashメッセージが存在する場合のみ表示 %>
<% if flash.present? %>
  <% flash.each do |message_type, message| %>
    <%# Railsのflashキー(:notice, :alert)をBootstrapの色に変換 %>
    <%
      case message_type
      when 'notice', 'success'
        type = 'success' # 緑色
      when 'alert'
        type = 'danger'  # 赤色
      else
        type = 'info'    # 青色
      end
    %>

    <%# BootstrapのDismissible alertのHTML構造 %>
    <div class="alert alert-<%= type %> alert-dismissible fade show" role="alert">
      <%= message %>
      <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
  <% end %>
<% end %>
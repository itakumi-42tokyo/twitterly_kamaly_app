<%# 1. お題表示エリア %>
    <%# ↓ この div タグを追加・修正します ↓ %>
<div class="d-flex justify-content-between align-items-center mb-3">
  <h1><%= @theme.title %></h1>
      <%# 「別のお題に変える」ボタン %>
  <%= link_to 'テーマを変える', root_path, class: 'btn btn-outline-secondary' %>
      <%# ボタンのスタイルも、画像に合わせてoutline-secondaryにしてみました %>
</div>

    <%# 必要であれば、ここにサブテキストなどを追加できます %>
    <%# <p class="card-text">このお題で投稿してみよう！</p> %>

<%# 2. 投稿フォーム %>
<%= provide(:button_text, '投稿する') %>
<div class="mb-4">
  <%= render 'form', post: @post, theme: @theme %>
</div>


<%# 3. 投稿一覧 %>
<h3 class="mb-3">みんなの投稿</h3>
<div id="posts">
  <% @posts.each do |post| %>
    <div class="card mb-3">
      <div class="card-body">
        <p class="card-text"><%= post.content %></p>
      </div>
      <div class="card-footer text-muted">
        投稿日時: <%= l post.created_at, format: :short %>
      </div>
    </div>
  <% end %>
</div>

